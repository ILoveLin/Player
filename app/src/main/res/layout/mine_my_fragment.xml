<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_all_mine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@null"
        app:title="@string/main_nav_mine" />

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="@color/gray"
        app:srlEnablePureScrollMode="true">
        <!--app:srlPrimaryColor="@android:color/white"-->
        <!--app:srlDrawableProgress="@drawable/ic_progress_puzzle"-->
        <!--纯滚动模式-->
        <!--app:srlEnablePureScrollMode="true"-->
        <!--刷新和加载更多设置-->
        <!--app:srlEnableAutoLoadMore="false"-->
        <!--app:srlEnableLoadMore="true"-->


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/bar_mine_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/selector_item_ffffff"
                    app:bar_leftColor="@color/black333333"
                    app:bar_leftDrawable="@mipmap/icon_add_user"
                    app:bar_leftText="@string/mine_current_user"
                    app:bar_leftTextSize="@dimen/sp_14"
                    app:bar_lineColor="@color/color_DDDDDD"
                    app:bar_lineMargin="@dimen/dp_15"
                    app:bar_lineSize="@dimen/dp_0_5"
                    app:bar_rightColor="@color/color_999999"
                    app:bar_rightText="admin"
                    app:bar_rightTextSize="@dimen/sp_13" />


                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/bar_mine_power_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/selector_item_ffffff"
                    app:bar_leftColor="@color/black333333"
                    app:bar_leftDrawable="@mipmap/icon_mine_pre"
                    app:bar_leftText="@string/mine_permissions"
                    app:bar_leftTextSize="@dimen/sp_14"
                    app:bar_lineColor="@color/color_DDDDDD"
                    app:bar_lineMargin="@dimen/dp_15"
                    app:bar_lineSize="@dimen/dp_0_5"
                    app:bar_rightColor="@color/color_999999" />

                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/bar_mine_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_item_ffffff"
                    app:bar_leftColor="@color/black333333"
                    app:bar_leftDrawable="@mipmap/icon_mine_version"
                    app:bar_leftText="@string/mine_about"
                    app:bar_leftTextSize="@dimen/sp_14"
                    app:bar_lineColor="@color/color_DDDDDD"
                    app:bar_lineMargin="@dimen/dp_15"
                    app:bar_lineSize="@dimen/dp_0_5"
                    app:bar_rightDrawable="@drawable/arrows_right_ic"
                    app:bar_rightText="" />

                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/bar_mine_power_explain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_item_ffffff"
                    app:bar_leftColor="@color/black333333"
                    app:bar_leftDrawable="@mipmap/icon_mine_what"
                    app:bar_leftText="@string/mine_permissions_instructions"
                    app:bar_leftTextSize="@dimen/sp_14"
                    app:bar_lineColor="@color/color_DDDDDD"
                    app:bar_lineMargin="@dimen/dp_15"
                    app:bar_lineSize="@dimen/dp_0_5"
                    app:bar_rightDrawable="@drawable/arrows_right_ic"
                    app:bar_rightText="" />

                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/bar_mine_use_pace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_item_ffffff"
                    android:paddingLeft="@dimen/dp_2"
                    app:bar_leftColor="@color/black333333"
                    app:bar_leftDrawable="@mipmap/icon_memory"
                    app:bar_leftText="@string/mine_available_space"
                    app:bar_leftTextSize="@dimen/sp_14"
                    app:bar_lineColor="@color/color_DDDDDD"
                    app:bar_lineMargin="@dimen/dp_15"
                    app:bar_lineSize="@dimen/dp_0_5"
                    app:bar_rightText=""
                    app:bar_rightTextSize="@dimen/sp_13" />

                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/bar_mine_how_use"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_item_ffffff"
                    app:bar_leftColor="@color/black333333"
                    app:bar_leftDrawable="@mipmap/icon_instructions"
                    app:bar_leftText="@string/mine_operation_manual"
                    app:bar_leftTextSize="@dimen/sp_14"
                    app:bar_lineColor="@color/color_DDDDDD"
                    app:bar_lineMargin="@dimen/dp_15"
                    app:bar_lineSize="@dimen/dp_0_5"
                    app:bar_rightDrawable="@drawable/arrows_right_ic"
                    app:bar_rightText="" />

                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/bar_mine_use"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_item_ffffff"
                    app:bar_leftColor="@color/black333333"
                    app:bar_leftDrawable="@drawable/ic_baseline_library_books_24"
                    app:bar_leftText="@string/mine_user_agreement"
                    app:bar_leftTextSize="@dimen/sp_14"
                    app:bar_lineColor="@color/color_DDDDDD"
                    app:bar_lineMargin="@dimen/dp_15"
                    app:bar_lineSize="@dimen/dp_0_5"
                    app:bar_rightDrawable="@drawable/arrows_right_ic"
                    app:bar_rightText="" />

                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/bar_mine_secret"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_item_ffffff"
                    app:bar_leftColor="@color/black333333"
                    app:bar_leftDrawable="@drawable/ic_baseline_library_books_24"
                    app:bar_leftText="@string/mine_privacy_policy"
                    app:bar_leftTextSize="@dimen/sp_14"
                    app:bar_lineColor="@color/color_DDDDDD"
                    app:bar_lineMargin="@dimen/dp_15"
                    app:bar_lineSize="@dimen/dp_0_5"
                    app:bar_rightDrawable="@drawable/arrows_right_ic"
                    app:bar_rightText="" />

                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/bar_mine_mic_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_item_ffffff"
                    app:bar_leftColor="@color/black333333"
                    app:bar_leftDrawable="@mipmap/icon_bg_mic_name"
                    app:bar_leftDrawablePadding="@dimen/dp_6"
                    app:bar_leftText="@string/mine_mic_name"
                    app:bar_leftTextSize="@dimen/sp_14"
                    app:bar_lineColor="@color/color_DDDDDD"
                    app:bar_lineMargin="@dimen/dp_15"
                    app:bar_lineSize="@dimen/dp_0_5"
                    app:bar_rightText=""
                    app:bar_rightTextSize="@dimen/sp_13" />

                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/sb_session_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:bar_leftDrawable="@mipmap/icon_bg_mic_name"
                    app:bar_leftText="直播数字"
                    app:bar_rightDrawable="@drawable/arrows_right_ic" />

                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/sb_setting_agreement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:visibility="gone"
                    app:bar_leftText="@string/mine_privacy_policy"
                    app:bar_rightDrawable="@drawable/arrows_right_ic" />


                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/bar_mine_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/selector_item_ffffff"
                    app:bar_leftColor="@color/black333333"
                    app:bar_leftDrawable="@mipmap/icon_mine_password"
                    app:bar_leftText="@string/mine_change_password"
                    app:bar_leftTextSize="@dimen/sp_14"
                    app:bar_lineColor="@color/color_DDDDDD"
                    app:bar_lineMargin="@dimen/dp_15"
                    app:bar_lineSize="@dimen/dp_0_5"
                    app:bar_rightDrawable="@drawable/arrows_right_ic"
                    app:bar_rightText="" />


                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/device_code_settingbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_item_ffffff"
                    android:visibility="gone"
                    app:bar_lineColor="@color/color_DDDDDD"
                    app:bar_lineMargin="@dimen/dp_15"
                    app:bar_lineSize="@dimen/dp_0_5"
                    app:bar_rightText="xxxxx" />

                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/bar_mine_exit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_item_ffffff"
                    app:bar_leftColor="@color/black333333"
                    app:bar_leftDrawable="@mipmap/icon_mine_exit"
                    app:bar_leftDrawablePadding="@dimen/dp_8"
                    app:bar_leftText="@string/mine_exit"
                    app:bar_leftTextSize="@dimen/sp_14"
                    app:bar_lineColor="@color/color_DDDDDD"
                    app:bar_lineMargin="@dimen/dp_15"
                    app:bar_lineSize="@dimen/dp_0_5"
                    app:bar_rightDrawable="@drawable/arrows_right_ic"
                    app:bar_rightText="" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </com.scwang.smart.refresh.layout.SmartRefreshLayout>


</LinearLayout>