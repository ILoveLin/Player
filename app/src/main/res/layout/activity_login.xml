<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:layoutAnimation="@anim/layout_animation_from_bottom"
    android:orientation="vertical"
    tools:context=".ui.activity.login.LoginAnimatorActivity"
    tools:layoutAnimation="@null">
    <!--    android:background="@mipmap/bg_login"-->
    <LinearLayout
        android:id="@+id/linear_login_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_80">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linear_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layoutAnimation="@anim/layout_animation_from_bottom"
                    android:orientation="vertical"
                    tools:context=".ui.activity.login.LoginAnimatorActivity"
                    tools:layoutAnimation="@null">

                    <ImageView
                        android:id="@+id/iv_login_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:src="@mipmap/icon_logo_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_23"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="@string/login_welcome"
                        android:textColor="@color/black333333"
                        android:textSize="@dimen/sp_25" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_23"
                        android:layout_marginTop="@dimen/dp_18"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="@string/login_account"
                        android:textColor="@color/color_B4B5B5"
                        android:textSize="@dimen/sp_16" />


                    <!--输入动作框体-->
                    <LinearLayout
                        android:id="@+id/ll_login_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_30"
                        android:orientation="vertical">
                        <!--            android:drawableLeft="@drawable/icon_login_user"-->


                        <RelativeLayout
                            android:id="@+id/relative_username_00"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_70"
                            android:layout_marginLeft="@dimen/dp_40"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_40">
<!--                            android:focusable="false"-->
<!--                            android:focusableInTouchMode="false"-->
                            <EditText
                                android:id="@+id/et_login_phone"
                                style="@style/EditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:layout_centerVertical="true"
                                android:background="@drawable/shape_cme_login"
                                android:clickable="true"
                                android:drawablePadding="@dimen/dp_10"

                                android:inputType="text"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="@color/color_999999" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="@dimen/dp_14"
                                android:background="@color/white"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10"
                                android:text="@string/login_account_name"
                                android:textColor="@color/color_BDBDBE"
                                android:textSize="@dimen/sp_11" />

                            <ImageButton
                                android:id="@+id/username_right"
                                style="@style/ww"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@null"
                                android:padding="@dimen/dp_10"
                                android:tag="close"
                                android:visibility="visible" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_70"
                            android:layout_marginLeft="@dimen/dp_40"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_40">

                            <com.hjq.widget.view.PasswordEditText
                                android:id="@+id/et_login_password"
                                style="@style/EditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:layout_centerVertical="true"
                                android:background="@drawable/shape_cme_login"
                                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@."
                                android:maxLength="20"
                                android:maxLines="1"
                                android:text=""
                                android:textColor="@color/black"
                                android:textColorHint="@color/color_999999" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="@dimen/dp_14"
                                android:background="@color/white"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10"
                                android:text="@string/login_account_password"
                                android:textColor="@color/color_BDBDBE"
                                android:textSize="@dimen/sp_11" />


                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_40"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_40"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_10">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <CheckBox
                                android:id="@+id/remember_password_checkbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:clickable="true"
                                android:gravity="center_vertical"
                                android:shadowColor="@color/yellow"
                                android:textColor="@color/viewfinder_laser"
                                android:theme="@style/MyCheckBox" />

                            <TextView
                                android:id="@+id/tv_login_forget"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:text="@string/login_password_remember"
                                android:textColor="@color/black" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_40"
                            android:layout_marginRight="@dimen/dp_32"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_10">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <CheckBox
                                android:id="@+id/checkbox_privacy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:checked="false"
                                android:clickable="true"
                                android:gravity="center_vertical"
                                android:shadowColor="@color/yellow"
                                android:textColor="@color/viewfinder_laser"
                                android:theme="@style/MyCheckBox" />
                            <!--                    《CME Player用户服务协议》和《CME Player用户隐私政策》-->
                            <TextView
                                android:id="@+id/tv_privacy_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:text="@string/common_user_confirm"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_privacy_desc1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:text="@string/login_service_agreement"
                                android:textColor="@color/color_3375D5" />

                            <TextView
                                android:id="@+id/tv_privacy_desc0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:text="@string/login_and"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_privacy_desc2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:text="@string/login_privacy_policy"
                                android:textColor="@color/color_3375D5" />


                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_login_commit"
                            style="@style/ButtonStyleLogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_40"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_40"
                            android:background="@mipmap/icon_login_bg_button"
                            android:text="@string/login_in" />
                        <!--            隐私条款 />-->


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
    <!--    app:widthPercent="50%"-->
    <!--    app:heightPercent="50%"-->
    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_login_bg" />

    <TextView
        android:id="@+id/tv_under"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_login_bg_under" />

    <View
        android:id="@+id/v_login_blank"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="5" />

    <!--    </LinearLayout>-->


</RelativeLayout>