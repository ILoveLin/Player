<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/shape_cme_input"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        style="@style/nestedscrollview_vertical_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 设备名-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                app:hintTextAppearance="@style/textInputLayoutHint">

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/cet_cme_device_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="@color/transparent"
                    android:hint="@string/device_name"
                    android:lines="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black80"
                    android:textColorHint="@color/black20"
                    android:textSize="@dimen/sp_14" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />
            <!-- 设备码-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                app:hintTextAppearance="@style/textInputLayoutHint">

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/cet_cme_device_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="@color/transparent"
                    android:digits="0123456789./abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:hint="@string/device_code"
                    android:lines="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black80"
                    android:textColorHint="@color/black20"
                    android:textSize="@dimen/sp_14" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />
            <!--备注信息-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                app:hintTextAppearance="@style/textInputLayoutHint">

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/cet_cme_note_message"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="@color/transparent"
                    android:hint="@string/device_mark_message"
                    android:lines="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black80"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />
            <!--ip-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                app:hintTextAppearance="@style/textInputLayoutHint">

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/cet_cme_ip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="@color/transparent"
                    android:hint="@string/device_ip_url"
                    android:lines="1"
                    android:longClickable="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black80"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />
            <!--ip2 ipPublic-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                app:hintTextAppearance="@style/textInputLayoutHint">

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/cet_cme_ip_public"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="@color/transparent"
                    android:hint="@string/device_ip_public"
                    android:lines="1"
                    android:longClickable="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black80"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

            <!--设备类型-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                app:hintTextAppearance="@style/textInputLayoutHint">

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/cet_cme_start_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="@color/transparent"
                    android:focusableInTouchMode="false"
                    android:hint="@string/device_deviceType"
                    android:lines="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black80"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

            <!--线路模式-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                app:hintTextAppearance="@style/textInputLayoutHint">

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/cet_cme_line_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="@color/transparent"
                    android:focusableInTouchMode="false"
                    android:hint="@string/device_line"
                    android:lines="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black80"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />
            <!--版本号-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                app:hintTextAppearance="@style/textInputLayoutHint">

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/cet_cme_api_version"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="@color/transparent"
                    android:digits="0123456789"
                    android:hint="@string/device_api_version"
                    android:lines="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black80"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />
            <!--直播端口号-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                app:hintTextAppearance="@style/textInputLayoutHint">

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/cet_cme_port"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="@color/transparent"
                    android:digits="0123456789"
                    android:hint="@string/device_live_port"
                    android:lines="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black80"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

            <!--socket端口-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                app:hintTextAppearance="@style/textInputLayoutHint">

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/cet_cme_socket_port"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="@color/transparent"
                    android:digits="0123456789"
                    android:hint="@string/device_socket_port"
                    android:lines="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black80"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />
            <!--http端口号-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                app:hintTextAppearance="@style/textInputLayoutHint">

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/cet_cme_http_port"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="@color/transparent"
                    android:digits="0123456789"
                    android:hint="@string/device_http_port"
                    android:lines="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black80"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />


            <!--设备账号-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                app:hintTextAppearance="@style/textInputLayoutHint">

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/cet_cme_account"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="@color/transparent"
                    android:hint="@string/device_account"
                    android:lines="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black80"
                    android:textColorHint="@color/black20"
                    android:textSize="@dimen/sp_14" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />
            <!--设备密码-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                app:hintTextAppearance="@style/textInputLayoutHint">

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/cet_cme_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="@color/transparent"
                    android:hint="@string/device_password"
                    android:lines="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black80"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />
            <!--DDNS账号-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                app:hintTextAppearance="@style/textInputLayoutHint">

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/cet_cme_ddns_account"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="@color/transparent"
                    android:hint="@string/device_ddns_account"
                    android:lines="1"
                    android:longClickable="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black80"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />
            <!--DDNS密码-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                app:hintTextAppearance="@style/textInputLayoutHint">

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/cet_cme_ddns_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="@color/transparent"
                    android:hint="@string/device_ddns_password"
                    android:lines="1"
                    android:longClickable="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black80"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />
            <!--DDNS address-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                app:hintTextAppearance="@style/textInputLayoutHint">

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/cet_cme_ddns_url"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="@color/transparent"
                    android:hint="@string/device_ddns_url"
                    android:lines="1"
                    android:longClickable="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black80"
                    android:textSize="@dimen/sp_14" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>