<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.company.shenzhou.ui.fragment.StatusFragment">

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/rl_status_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="@color/gray"
        app:srlEnablePureScrollMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.hjq.bar.TitleBar
                android:id="@+id/title_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:leftIcon="@null"
                app:rightIcon="@drawable/selector_add_something"
                app:title="@string/main_nav_user" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/color_f7f7f7"
                android:gravity="bottom"
                android:paddingLeft="@dimen/dp_13"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:text="@string/current_user"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/dp_14" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:drawableLeft="@mipmap/icon_add_user"
                    android:drawablePadding="@dimen/dp_16"
                    android:paddingLeft="@dimen/dp_5"
                    android:text="admin"
                    android:textColor="@color/black333333"
                    android:textSize="@dimen/dp_15" />

                <View
                    android:layout_width="@dimen/dp_0_5"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/ib_right_user"
                    style="@style/ww"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:padding="@dimen/dp_10" />

                <View
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/color_f7f7f7"
                android:gravity="bottom"
                android:paddingLeft="@dimen/dp_13"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:text="@string/else_user"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_14" />


            <com.hjq.widget.layout.WrapRecyclerView
                android:id="@+id/rv_status_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                tools:listCount="10"
                tools:listitem="@layout/picker_item" />

        </LinearLayout>


    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</FrameLayout>