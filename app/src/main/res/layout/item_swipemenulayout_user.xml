<?xml version="1.0" encoding="utf-8"?>
<com.company.shenzhou.widget.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeMenuLay"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:clickable="true"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">


    <LinearLayout
        android:id="@+id/linear_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_41"
        android:background="@drawable/selector_item_ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal">

            <com.hjq.widget.view.SwitchButton
                android:id="@+id/slide_switch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:clickable="false"
                android:gravity="center"
                android:paddingRight="@dimen/dp_16"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/update_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/slide_switch"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:text="@string/item_change_password"
                android:textColor="@color/blue007AFF"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@mipmap/icon_add_user"
                android:drawablePadding="@dimen/dp_16"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="@dimen/dp_15"
                android:text="123"
                android:textColor="@color/black333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_text_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_text"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="@dimen/dp_5"
                android:text="(超级用户)"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_13" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/color_DDDDDD" />
        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/delete"
        android:layout_width="@dimen/dp_65"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:text="@string/item_delete_user"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

</com.company.shenzhou.widget.SwipeMenuLayout>