        <service android:name=".mineui.service.ReceiveSocketService" />
        <service android:name=".mineui.service.NotificationService" />
        <!-- 主界面 -->
        <activity
            android:name=".mineui.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <!-- 引导页 -->
        <activity
            android:name=".mineui.activity.GuideActivity"
