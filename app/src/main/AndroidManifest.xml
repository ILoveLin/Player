        <!-- 权限说明界面 -->
        <activity
            android:name=".mineui.activity.SearchDeviceActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 线路1 播放界面 -->
        <activity
            android:name=".mineui.activity.PlayerLine1Activity"
            android:launchMode="singleTop"
            android:theme="@style/FullScreenTheme" />
        <!-- 线路2 播放界面 -->
        <activity
            android:name=".mineui.activity.PlayerLine2Activity"
            android:launchMode="singleTop"
            android:theme="@style/FullScreenTheme" />
        <!-- 线路3 播放界面 -->
        <activity
            android:name=".mineui.activity.PlayerLine3Activity"
            android:launchMode="singleTop"
            android:theme="@style/FullScreenTheme" />
        <!-- RC200 播放界面 -->
        <activity
            android:name=".mineui.activity.PlayerRC200Activity"
